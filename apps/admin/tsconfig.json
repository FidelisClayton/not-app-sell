{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/lib/*": ["../../packages/lib/src/*"],
      "@shared/repositories/*": ["../../packages/repositories/*"],
      "@shared/models/*": ["../../packages/models/*"],
      "@shared/validation/*": ["../../packages/validation/*"],
      "@shared/controllers/*": ["../../packages/controllers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
